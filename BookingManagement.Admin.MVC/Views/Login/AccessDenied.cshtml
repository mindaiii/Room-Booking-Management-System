@{
    ViewData["Title"] = "Không có quyền truy cập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FPTU-RBS Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body {
            background-color: #f8f9fc;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }
        .access-denied-container {
            width: 100%;
            max-width: 600px;
            padding: 15px;
        }
        .access-denied-card {
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        .access-denied-header {
            background-color: #e74a3b;
            color: white;
            padding: 2rem 1.5rem;
            text-align: center;
        }
        .access-denied-body {
            background-color: white;
            padding: 2rem;
            text-align: center;
        }
        .access-denied-footer {
            background-color: #f8f9fc;
            border-top: 1px solid #e3e6f0;
            padding: 1rem;
            text-align: center;
        }
        .error-icon {
            font-size: 5rem;
            margin-bottom: 1rem;
            color: #e74a3b;
        }
    </style>
</head>
<body>
    <div class="access-denied-container">
        <div class="access-denied-card">
            <div class="access-denied-header">
                <h3 class="mb-0">Truy cập bị từ chối</h3>
            </div>
            <div class="access-denied-body">
                <div class="error-icon">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                </div>
                <h1 class="display-5 fw-bold text-danger mb-4">403</h1>
                <h2 class="mb-4">Không có quyền truy cập</h2>
                <p class="lead mb-4">Bạn không có quyền truy cập vào trang này. Vui lòng liên hệ quản trị viên nếu bạn cho rằng đây là một lỗi.</p>
                <a asp-controller="Login" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Quay lại trang đăng nhập
                </a>
            </div>
            <div class="access-denied-footer">
                <p class="mb-0">&copy; @DateTime.Now.Year - FPTU Room Booking System</p>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
