@page
@model IndexModel
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Banner Section -->
<div class="container-fluid p-0">
    <div class="hero-section position-relative">
        <img src="~/images/fptu-campus.jpg" class="img-fluid w-100 hero-image" alt="FPT University Campus" />
        <div class="hero-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center">
            <div class="hero-content text-center text-white p-4">
                <h1 class="hero-title display-3 fw-bold mb-4">FPTU Room Booking System</h1>
                <p class="hero-subtitle lead mb-5">Hệ thống đặt phòng học thông minh dành cho Sinh viên và Giảng viên FPT University</p>
                <div class="hero-buttons">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-page="/RoomList/Index" class="btn btn-orange btn-lg me-3">
                            <i class="bi bi-calendar-plus me-2"></i>Đặt phòng ngay
                        </a>
                        <a asp-page="/BookingRoom/Index" class="btn btn-outline-light btn-lg">
                            <i class="bi bi-list-check me-2"></i>Xem lịch của tôi
                        </a>
                    }
                    else
                    {
                        <a asp-page="/Login/Index" class="btn btn-orange btn-lg me-3">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập
                        </a>
                        <a asp-page="/Register/Index" class="btn btn-outline-light btn-lg">
                            <i class="bi bi-person-plus me-2"></i>Đăng ký
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (User.Identity.IsAuthenticated)
{
    <!-- Welcome message for authenticated users -->
    <div class="container my-5">
        <div class="row">
            <div class="col-12">
                <div class="welcome-card card border-0 shadow-sm mb-4">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-3">
                            <div class="welcome-icon icon-circle bg-orange rounded-circle p-3 me-3">
                                <i class="bi bi-person-check text-white fs-4"></i>
                            </div>
                            <div>
                                <h2 class="card-title mb-1">Xin chào, @User.Identity.Name!</h2>
                                <p class="text-muted mb-0">Chào mừng bạn trở lại với hệ thống đặt phòng FPT University</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick actions for authenticated users -->
        <div class="quick-actions mb-5">
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="action-card card h-100 border-0 shadow-sm">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="action-icon icon-circle bg-gradient-orange rounded-circle p-3 me-3">
                                    <i class="bi bi-calendar-plus text-white fs-3"></i>
                                </div>
                                <h3 class="card-title mb-0">Đặt phòng mới</h3>
                            </div>
                            <p class="card-text text-muted mb-4">
                                Tìm kiếm và đặt phòng trống cho các hoạt động của bạn theo thời gian thực.
                                Chọn ngày, khung giờ và loại phòng phù hợp với nhu cầu.
                            </p>
                            <a asp-page="/RoomList/Index" class="btn btn-orange">
                                <i class="bi bi-arrow-right me-2"></i>Đặt phòng ngay
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="action-card card h-100 border-0 shadow-sm">
                        <div class="card-body p-4">
                            <div class="d-flex align-items-center mb-3">
                                <div class="action-icon icon-circle bg-gradient-green rounded-circle p-3 me-3">
                                    <i class="bi bi-list-check text-white fs-3"></i>
                                </div>
                                <h3 class="card-title mb-0">Lịch đặt phòng của tôi</h3>
                            </div>
                            <p class="card-text text-muted mb-4">
                                Xem danh sách các phòng bạn đã đặt, theo dõi trạng thái phê duyệt,
                                chỉnh sửa thông tin hoặc hủy đặt phòng nếu cần.
                            </p>
                            <a asp-page="/BookingRoom/Index" class="btn btn-success">
                                <i class="bi bi-arrow-right me-2"></i>Xem lịch của tôi
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Additional features grid -->
        <div class="features-section mb-5">
            <h2 class="section-title text-center mb-5">Tính năng nổi bật</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="feature-card card h-100 border-0 shadow-sm text-center">
                        <div class="card-body p-4">
                            <div class="feature-icon icon-circle bg-gradient-blue rounded-circle p-3 mx-auto mb-3">
                                <i class="bi bi-shield-check text-white fs-2"></i>
                            </div>
                            <h3 class="card-title text-primary">Bảo mật cao</h3>
                            <p class="card-text text-muted">
                                Hệ thống xác thực an toàn với tài khoản FPT University, 
                                đảm bảo chỉ sinh viên và giảng viên mới có thể truy cập.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="feature-card card h-100 border-0 shadow-sm text-center">
                        <div class="card-body p-4">
                            <div class="feature-icon icon-circle bg-gradient-warning rounded-circle p-3 mx-auto mb-3">
                                <i class="bi bi-clock text-white fs-2"></i>
                            </div>
                            <h3 class="card-title text-warning">Thời gian thực</h3>
                            <p class="card-text text-muted">
                                Cập nhật trạng thái phòng trống theo thời gian thực, 
                                giúp bạn nhanh chóng tìm được phòng phù hợp.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-4">
                    <div class="feature-card card h-100 border-0 shadow-sm text-center">
                        <div class="card-body p-4">
                            <div class="feature-icon icon-circle bg-gradient-secondary rounded-circle p-3 mx-auto mb-3">
                                <i class="bi bi-people text-white fs-2"></i>
                            </div>
                            <h3 class="card-title text-secondary">Dễ sử dụng</h3>
                            <p class="card-text text-muted">
                                Giao diện thân thiện, trực quan, dễ dàng tìm kiếm 
                                và đặt phòng chỉ với vài thao tác đơn giản.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<!-- Main features showcase for all users -->
<div class="container my-5">
    <div class="showcase-section">
        <h2 class="section-title text-center mb-5">Tại sao chọn hệ thống của chúng tôi?</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="showcase-card card h-100 border-0 shadow-sm text-center">
                    <div class="card-body p-4">
                        <div class="showcase-icon icon-circle bg-gradient-orange rounded-circle p-3 mx-auto mb-3">
                            <i class="bi bi-laptop text-white fs-2"></i>
                        </div>
                        <h3 class="card-title text-orange">Tìm kiếm dễ dàng</h3>
                        <p class="card-text text-muted">
                            Tìm phòng trống dựa trên thời gian, sức chứa, loại phòng và trang thiết bị 
                            với giao diện tìm kiếm trực quan, dễ sử dụng.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="showcase-card card h-100 border-0 shadow-sm text-center">
                    <div class="card-body p-4">
                        <div class="showcase-icon icon-circle bg-gradient-green rounded-circle p-3 mx-auto mb-3">
                            <i class="bi bi-calendar-check text-white fs-3"></i>
                        </div>
                        <h3 class="card-title text-success">Đặt phòng nhanh chóng</h3>
                        <p class="card-text text-muted">
                            Quy trình đặt phòng đơn giản, nhanh chóng với xác nhận tức thì 
                            và hệ thống theo dõi trạng thái đặt phòng thời gian thực.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="showcase-card card h-100 border-0 shadow-sm text-center">
                    <div class="card-body p-4">
                        <div class="showcase-icon icon-circle bg-gradient-blue rounded-circle p-3 mx-auto mb-3">
                            <i class="bi bi-bell text-white fs-3"></i>
                        </div>
                        <h3 class="card-title text-info">Thông báo tự động</h3>
                        <p class="card-text text-muted">
                            Nhận thông báo về trạng thái đặt phòng, nhắc nhở trước giờ sử dụng 
                            và các thông tin quan trọng khác qua email và hệ thống.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action Section -->
<div class="container-fluid bg-light py-5">
    <div class="container">
        <div class="cta-section">
            <div class="cta-card bg-gradient text-white rounded-4 p-5 text-center">
                <h2 class="display-5 fw-bold mb-4">Sẵn sàng bắt đầu?</h2>
                <p class="lead mb-4">
                    Tham gia cùng hàng nghìn sinh viên và giảng viên FPT University đang sử dụng 
                    hệ thống đặt phòng thông minh của chúng tôi.
                </p>
                <div class="cta-buttons">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-page="/RoomList/Index" class="btn btn-light btn-lg me-3">
                            <i class="bi bi-search me-2"></i>Tìm phòng trống
                        </a>
                        <a asp-page="/BookingRoom/Index" class="btn btn-outline-light btn-lg">
                            <i class="bi bi-calendar3 me-2"></i>Xem lịch đặt
                        </a>
                    }
                    else
                    {
                        <a asp-page="/Login/Index" class="btn btn-light btn-lg me-3">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập ngay
                        </a>
                        <a asp-page="/Register/Index" class="btn btn-outline-light btn-lg">
                            <i class="bi bi-person-plus me-2"></i>Tạo tài khoản
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Section -->
<div class="stats-section py-5">
    <div class="container">
        <h2 class="section-title text-center mb-5">Thống kê hệ thống</h2>
        <div class="row stats-grid">
            <div class="col-6 col-md-3 mb-4">
                <div class="stat-card card border-0 shadow-sm text-center h-100">
                    <div class="card-body p-4">
                        <div class="stat-icon mx-auto mb-3 text-orange">
                            <i class="bi bi-building fs-1"></i>
                        </div>
                        <h3 class="stat-number h2 fw-bold text-orange mb-2">50+</h3>
                        <p class="stat-label text-muted mb-0">Phòng học</p>
                    </div>
                </div>
            </div>

            <div class="col-6 col-md-3 mb-4">
                <div class="stat-card card border-0 shadow-sm text-center h-100">
                    <div class="card-body p-4">
                        <div class="stat-icon mx-auto mb-3 text-success">
                            <i class="bi bi-people fs-1"></i>
                        </div>
                        <h3 class="stat-number h2 fw-bold text-success mb-2">1000+</h3>
                        <p class="stat-label text-muted mb-0">Người dùng</p>
                    </div>
                </div>
            </div>

            <div class="col-6 col-md-3 mb-4">
                <div class="stat-card card border-0 shadow-sm text-center h-100">
                    <div class="card-body p-4">
                        <div class="stat-icon mx-auto mb-3 text-info">
                            <i class="bi bi-calendar-check fs-1"></i>
                        </div>
                        <h3 class="stat-number h2 fw-bold text-info mb-2">5000+</h3>
                        <p class="stat-label text-muted mb-0">Lượt đặt phòng</p>
                    </div>
                </div>
            </div>

            <div class="col-6 col-md-3 mb-4">
                <div class="stat-card card border-0 shadow-sm text-center h-100">
                    <div class="card-body p-4">
                        <div class="stat-icon mx-auto mb-3 text-warning">
                            <i class="bi bi-star fs-1"></i>
                        </div>
                        <h3 class="stat-number h2 fw-bold text-warning mb-2">98%</h3>
                        <p class="stat-label text-muted mb-0">Hài lòng</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
